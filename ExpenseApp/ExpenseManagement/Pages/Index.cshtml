@page
@model IndexModel
@{
    ViewData["Title"] = "Expenses";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Database Error:</strong> @Model.ErrorMessage
        <br /><small>File: DatabaseService.cs - Check connection string and managed identity configuration</small>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Expenses</h1>
        <a href="/AddExpense" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Expense
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <label for="filter" class="form-label">Filter:</label>
                    <input type="text" class="form-control" id="filter" name="filter" value="@Model.FilterText" placeholder="Search by category, description, or status...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Expenses.Any())
                        {
                            @foreach (var expense in Model.Expenses)
                            {
                                <tr>
                                    <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@expense.CategoryName</td>
                                    <td>Â£@expense.Amount.ToString("F2")</td>
                                    <td>
                                        @if (expense.StatusName == "Submitted")
                                        {
                                            <span class="badge bg-warning text-dark">@expense.StatusName</span>
                                        }
                                        else if (expense.StatusName == "Approved")
                                        {
                                            <span class="badge bg-success">@expense.StatusName</span>
                                        }
                                        else if (expense.StatusName == "Rejected")
                                        {
                                            <span class="badge bg-danger">@expense.StatusName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@expense.StatusName</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/ViewExpense?id=@expense.ExpenseId" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No expenses found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="/ApproveExpenses" class="btn btn-outline-secondary">
            <i class="bi bi-check2-square"></i> Approve Expenses
        </a>
        <a href="/swagger" class="btn btn-outline-info" target="_blank">
            <i class="bi bi-code-square"></i> API Documentation
        </a>
    </div>
</div>
